{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@team/types": ["packages/types/src"],
      "@team/types/*": ["packages/types/src/*"],
      "@team/test-utils": ["packages/test-utils/src"],
      "@team/test-utils/*": ["packages/test-utils/src/*"],
      "@team/shop-core": ["packages/shop-core/src"],
      "@team/shop-core/*": ["packages/shop-core/src/*"],
      "@team/theme": ["packages/theme/src"],
      "@team/theme/*": ["packages/theme/src/*"]
    }
  },
  "include": [
    "apps/mobile/**/*",
    "apps/web/**/*",
    "packages/api/**/*",
    "packages/auth-client/**/*",
    "packages/constants/**/*",
    "packages/core-utils/**/*",
    "packages/crypto-utils/**/*",
    "packages/file-utils/**/*",
    "packages/hooks/**/*",
    "packages/location-utils/**/*",
    "packages/mobile-ui/**/*",
    "packages/shop-core/**/*",
    "packages/test-utils/**/*",
    "packages/theme/**/*",
    "packages/types/**/*",
    "packages/validators/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/.next/**",
    "**/.expo/**",
    "**/.eas/**",
    "**/web-build/**"
  ]
}
