{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "apps/mobile/**/*",
    "apps/web/**/*",
    "packages/api/**/*",
    "packages/constants/**/*",
    "packages/core-utils/**/*",
    "packages/crypto-utils/**/*",
    "packages/hooks/**/*",
    "packages/location-utils/**/*",
    "packages/mobile-ui/**/*",
    "packages/shop-core/**/*",
    "packages/test-utils/**/*",
    "packages/theme/**/*",
    "packages/types/**/*",
    "packages/validators/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/.next/**",
    "**/.expo/**",
    "**/.eas/**",
    "**/web-build/**"
  ]
}
