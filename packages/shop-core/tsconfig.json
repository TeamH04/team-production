{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@team/types": ["../types/src"],
      "@team/types/*": ["../types/src/*"],
      "@team/test-utils": ["../test-utils/src"],
      "@team/test-utils/*": ["../test-utils/src/*"]
    }
  },
  "include": ["src"]
}
