{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["app/*"],
      "@team/api": ["../../packages/api/src"],
      "@team/api/*": ["../../packages/api/src/*"],
      "@team/constants": ["../../packages/constants/src"],
      "@team/core-utils": ["../../packages/core-utils/src"],
      "@team/hooks": ["../../packages/hooks/src"],
      "@team/shop-core": ["../../packages/shop-core/src"],
      "@team/test-utils": ["../../packages/test-utils/src"],
      "@team/theme": ["../../packages/theme/src"],
      "@team/theme/*": ["../../packages/theme/src/*"],
      "@team/types": ["../../packages/types/src"],
      "@team/types/*": ["../../packages/types/src/*"],
      "@team/test-utils": ["../../packages/test-utils/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
