{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@team/api": ["../../packages/api/src"],
      "@team/api/*": ["../../packages/api/src/*"],
      "@team/constants": ["../../packages/constants/src"],
      "@team/core-utils": ["../../packages/core-utils/src"],
      "@team/hooks": ["../../packages/hooks/src"],
      "@team/shop-core": ["../../packages/shop-core/src"],
      "@team/test-utils": ["../../packages/test-utils/src"],
      "@team/theme": ["../../packages/theme/src"],
      "@team/theme/*": ["../../packages/theme/src/*"],
      "@team/types": ["../../packages/types/src"],
      "@team/types/*": ["../../packages/types/src/*"],
      "@team/test-utils": ["../../packages/test-utils/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
