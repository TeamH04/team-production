{
  "name": "team-production",
  "private": true,
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48",
  "engines": {
    "node": "24.x",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "pnpm --filter @apps/mobile dev",
    "dev:tunnel": "pnpm --dir apps/mobile exec expo start -c --tunnel",
    "dev:web": "pnpm --filter web dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "lint:apps": "turbo run lint",
    "lint:report:prep": "node scripts/prepare-reports.mjs",
    "lint:report:json": "node scripts/run-eslint-json.mjs",
    "lint:report:md": "node scripts/eslint-to-md.mjs",
    "lint:report": "pnpm run lint:report:prep && pnpm run lint:report:json && pnpm run lint:report:md",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r exec rm -rf dist .next .expo node_modules/.cache",
    "android": "pnpm --dir apps/mobile exec expo run:android",
    "ios": "pnpm --dir apps/mobile exec expo run:ios",
    "create-package": "node scripts/create-package.mjs"
  },
  "devDependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0",
    "@babel/core": "^7.28.6",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-native": "^5.0.0",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "turbo": "^2.7.5",
    "typescript": "~5.9.3"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "@types/react": "~19.1.17",
      "@types/react-dom": "~19.1.11"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "type": "module",
  "version": "1.0.0"
}
