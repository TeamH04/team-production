{
  "name": "team-production",
  "private": true,
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "engines": {
    "node": "24.x",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "pnpm --filter @apps/mobile dev",
    "dev:tunnel": "pnpm --dir apps/mobile exec expo start -c --tunnel",
    "dev:web": "pnpm --filter web dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "lint:apps": "turbo run lint",
    "lint:report:prep": "node scripts/prepare-reports.mjs",
    "lint:report:json": "node scripts/run-eslint-json.mjs",
    "lint:report:md": "node scripts/eslint-to-md.mjs",
    "lint:report": "pnpm run lint:report:prep && pnpm run lint:report:json && pnpm run lint:report:md",
    "conflict:report": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/conflict-report.ps1",
    "fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "sh -c 'FILES=$(prettier --list-different \"**/*.{ts,tsx,js,jsx,json,md}\" || true); if [ -z \"$FILES\" ]; then echo \"prettier: no changes\"; else echo \"$FILES\"; prettier --write $FILES; fi'",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:mobile": "sh -c 'FILES=$(prettier --list-different \"apps/mobile/**/*.{ts,tsx,js,jsx,json}\" || true); if [ -z \"$FILES\" ]; then echo \"prettier:mobile no changes\"; else echo \"$FILES\"; prettier --write $FILES; fi'",
    "format:backend": "sh -c 'FILES=$(prettier --list-different \"apps/backend/**/*.{ts,tsx,js,jsx,json,md}\" || true); if [ -z \"$FILES\" ]; then echo \"prettier:backend no changes\"; else echo \"$FILES\"; prettier --write $FILES; fi'",
    "clean": "pnpm -r exec rm -rf dist .next .expo node_modules/.cache",
    "android": "pnpm --dir apps/mobile exec expo run:android",
    "ios": "pnpm --dir apps/mobile exec expo run:ios",
    "create-package": "node scripts/create-package.mjs"
  },
  "devDependencies": {
    "@actions/core": "^2.0.3",
    "@actions/github": "^7.0.0",
    "@babel/core": "^7.28.6",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-native": "^5.0.0",
    "globals": "^17.2.0",
    "prettier": "^3.8.1",
    "turbo": "^2.7.6",
    "typescript": "~5.9.3"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "@types/react": "~19.1.17",
      "@types/react-dom": "~19.1.11"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "type": "module",
  "version": "1.0.0"
}
