{
  "name": "team-production",
  "private": true,
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b",
  "engines": {
    "node": "20.x",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "pnpm --dir apps/mobile exec expo start -c --tunnel",
    "dev:mobile": "pnpm --dir apps/mobile start",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "lint:mobile": "eslint \"apps/mobile/**/*.{ts,tsx,js,jsx}\"",
    "lint:report:prep": "node scripts/prepare-reports.mjs",
    "lint:report:json": "node scripts/run-eslint-json.mjs",
    "lint:report:md": "node scripts/eslint-to-md.mjs",
    "lint:report": "pnpm run lint:report:prep && pnpm run lint:report:json && pnpm run lint:report:md",
    "fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:mobile": "prettier --write \"apps/mobile/**/*.{ts,tsx,js,jsx,json}\"",
    "format:backend": "prettier --write \"apps/backend/**/*.{ts,tsx,js,jsx,json,md}\"",
    "android": "pnpm --dir apps/mobile exec expo run:android",
    "ios": "pnpm --dir apps/mobile exec expo run:ios"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@eslint/js": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-native": "^5.0.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  },
  "type": "module",
  "version": "1.0.0"
}
